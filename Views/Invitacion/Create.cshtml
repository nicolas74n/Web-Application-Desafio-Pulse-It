@model Web_Application_Desafio_Pulse_It.Models.Invitacion

@{
    ViewData["Title"] = "Create";
}


<script type="text/javascript">
    $(document).ready(function () {
        console.log($('select[name="ListItemUsuario"]'));
$('select[name="ListItemUsuario"]').change(function () {
if ($.trim($(this).val()) == 2) {
$('div[id="EmailNoRegistrado"]').hide();
}
else {
$('div[id="EmailNoRegistrado"]').show();
}
});
});
</script>


<h1>Create</h1>


<h4>Invitacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvitacionEventoId" class="control-label"></label>
                <select asp-for="InvitacionEventoId" class ="form-control" asp-items="ViewBag.InvitacionEventoId"></select>
            </div>
            <div class="form-group">

                <label asp-for="UsuarioInvitadoId" class="control-label"></label>
                <select asp-for="UsuarioInvitadoId" class ="form-control" asp-items="ViewBag.UsuarioInvitadoId"></select>
                
            </div>
                <div id="EmailNoRegistrado" class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="hidden" value="1" asp-for="EstadoInvitacionId">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

