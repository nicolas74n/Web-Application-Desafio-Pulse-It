@model IEnumerable<Web_Application_Desafio_Pulse_It.Models.Invitacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoInvitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvitacionEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioInvitado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @if (item.Email == null)
                    {
                        @Html.DisplayFor(modelItem => item.UsuarioInvitado.Email)
                    }else{
                        @Html.DisplayFor(modelItem => item.Email)
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoInvitacion.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvitacionEvento.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioInvitado.NombreCompleto)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
